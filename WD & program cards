    <script>
        // Weather Animation System
        const canvas = document.getElementById('weatherCanvas');
        const ctx = canvas.getContext('2d');
        let particles = [];
        let currentWeatherAnimation = 'clear';
        
        function resizeCanvas() {
            canvas.width = canvas.offsetWidth;
            canvas.height = canvas.offsetHeight;
        }
        
        resizeCanvas();
        window.addEventListener('resize', resizeCanvas);
        
        class Particle {
            constructor(type) {
                this.type = type;
                this.reset();
            }
            
            reset() {
                this.x = Math.random() * canvas.width;
                this.y = -20;
                
                if (this.type === 'rain') {
                    this.speed = Math.random() * 3 + 8;
                    this.length = Math.random() * 15 + 10;
                    this.opacity = Math.random() * 0.3 + 0.5;
                } else if (this.type === 'snow') {
                    this.speed = Math.random() * 1 + 1;
                    this.size = Math.random() * 3 + 2;
                    this.opacity = Math.random() * 0.4 + 0.4;
                    this.drift = Math.random() * 2 - 1;
                } else {
                    this.speed = Math.random() * 0.5 + 0.2;
                    this.size = Math.random() * 2 + 1;
                    this.opacity = Math.random() * 0.2 + 0.1;
                    this.drift = Math.random() * 0.5 - 0.25;
                }
            }
            
            update() {
                this.y += this.speed;
                
                if (this.type === 'snow' || this.type === 'clear') {
                    this.x += this.drift;
                }
                
                if (this.y > canvas.height + 20) {
                    this.reset();
                }
            }
            
            draw() {
                ctx.globalAlpha = this.opacity;
                
                if (this.type === 'rain') {
                    ctx.strokeStyle = 'rgba(174, 194, 224, 0.8)';
                    ctx.lineWidth = 1;
                    ctx.beginPath();
                    ctx.moveTo(this.x, this.y);
                    ctx.lineTo(this.x, this.y + this.length);
                    ctx.stroke();
                } else if (this.type === 'snow') {
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.9)';
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                    ctx.fill();
                } else {
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.6)';
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                    ctx.fill();
                }
                
                ctx.globalAlpha = 1;
            }
        }
        
        function startWeatherAnimation(type) {
            currentWeatherAnimation = type;
            particles = [];
            
            let particleCount;
            if (type === 'rain') {
                particleCount = 150;
            } else if (type === 'snow') {
                particleCount = 100;
            } else {
                particleCount = 30;
            }
            
            for (let i = 0; i < particleCount; i++) {
                particles.push(new Particle(type));
                particles[i].y = Math.random() * canvas.height;
            }
        }
        
        function animateWeather() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            particles.forEach(particle => {
                particle.update();
                particle.draw();
            });
            
            requestAnimationFrame(animateWeather);
        }
        
        startWeatherAnimation('clear');
        animateWeather();
        
        // Day/Night Theme System
        let themeOverride = localStorage.getItem('themeOverride');
        let isDay = true;
        
        function applyTheme(isDayTheme) {
            if (isDayTheme) {
                document.body.classList.remove('night-mode');
            } else {
                document.body.classList.add('night-mode');
            }
        }
        
        function updateTheme() {
            if (themeOverride === 'day') {
                applyTheme(true);
            } else if (themeOverride === 'night') {
                applyTheme(false);
            } else {
                applyTheme(isDay);
            }
        }
        
        function toggleThemeManual() {
            if (themeOverride === null) {
                themeOverride = isDay ? 'night' : 'day';
            } else if (themeOverride === 'day') {
                themeOverride = 'night';
            } else if (themeOverride === 'night') {
                themeOverride = null;
            }
            
            localStorage.setItem('themeOverride', themeOverride);
            updateTheme();
        }
        
        updateTheme();
        
        setTimeout(() => {
            const homeThemeToggle = document.getElementById('themeToggle');
            
            if (homeThemeToggle) {
                homeThemeToggle.addEventListener('click', (e) => {
                    e.preventDefault();
                    toggleThemeManual();
                });
                
                homeThemeToggle.style.display = 'flex';
            }
        }, 100);
        
        // Live Weather Integration
        let userLat = 43.5448;
        let userLon = -80.2482;
        
        async function fetchWeatherByLocation(lat, lon) {
            try {
                const response = await fetch(
                    `https://api.open-meteo.com/v1/forecast?latitude=${lat}&longitude=${lon}&current=temperature_2m,relative_humidity_2m,apparent_temperature,is_day,wind_speed_10m,wind_direction_10m,wind_gusts_10m,precipitation,rain,showers,snowfall,weather_code,cloud_cover&timezone=auto`
                );
                
                if (!response.ok) {
                    throw new Error('Weather data fetch failed');
                }
                
                const data = await response.json();
                updateWeatherDisplay(data);
            } catch (error) {
                console.error('Error fetching weather:', error);
                updateTimeAndDate();
            }
        }
        
        function getUserLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        userLat = position.coords.latitude;
                        userLon = position.coords.longitude;
                        fetchWeatherByLocation(userLat, userLon);
                    },
                    (error) => {
                        fetchWeatherByLocation(userLat, userLon);
                    }
                );
            } else {
                fetchWeatherByLocation(userLat, userLon);
            }
        }
        
        function updateWeatherDisplay(data) {
            const current = data.current;
            
            isDay = current.is_day === 1;
            updateTheme();
            
            const temp = Math.round(current.temperature_2m);
            document.querySelector('.temperature-display').textContent = `${temp}°C`;
            
            const condition = getWeatherCondition(current.weather_code);
            document.querySelector('.condition-text').textContent = condition;
            
            updateWeatherIcon(current.weather_code);
            updateWeatherAnimation(current);
            
            const windSpeed = current.wind_speed_10m.toFixed(1);
            document.querySelector('#windSpeed').textContent = `${windSpeed} km/h`;
            
            document.querySelector('#humidity').textContent = `${current.relative_humidity_2m}%`;
            
            updateTimeAndDate();
        }
        
        function updateWeatherAnimation(current) {
            let animationType = 'clear';
            
            if (current.snowfall > 0 || current.weather_code === 71 || current.weather_code === 73 || 
                current.weather_code === 75 || current.weather_code === 77 || 
                current.weather_code === 85 || current.weather_code === 86) {
                animationType = 'snow';
            }
            else if (current.rain > 0 || current.showers > 0 || current.precipitation > 0 ||
                     current.weather_code >= 51 && current.weather_code <= 67 ||
                     current.weather_code >= 80 && current.weather_code <= 82) {
                animationType = 'rain';
            }
            else if (current.weather_code >= 0 && current.weather_code <= 3) {
                animationType = 'clear';
            }
            
            if (animationType !== currentWeatherAnimation) {
                startWeatherAnimation(animationType);
            }
        }
        
        function getWeatherCondition(code) {
            const conditions = {
                0: 'Clear',
                1: 'Mainly Clear',
                2: 'Partly Cloudy',
                3: 'Cloudy',
                45: 'Foggy',
                48: 'Foggy',
                51: 'Light Drizzle',
                53: 'Drizzle',
                55: 'Heavy Drizzle',
                61: 'Light Rain',
                63: 'Rain',
                65: 'Heavy Rain',
                71: 'Light Snow',
                73: 'Snow',
                75: 'Heavy Snow',
                77: 'Snow Grains',
                80: 'Light Showers',
                81: 'Showers',
                82: 'Heavy Showers',
                85: 'Light Snow Showers',
                86: 'Snow Showers',
                95: 'Thunderstorm',
                96: 'Thunderstorm',
                99: 'Thunderstorm'
            };
            return conditions[code] || 'Partly Cloudy';
        }
        
        function updateWeatherIcon(code) {
            const iconContainer = document.querySelector('.weather-icon-small');
            let iconSVG = '';
            
            if (code === 0 || code === 1) {
                iconSVG = `<svg viewBox="0 0 24 24">
                    <path d="M6.76 4.84l-1.8-1.79-1.41 1.41 1.79 1.79 1.42-1.41zM4 10.5H1v2h3v-2zm9-9.95h-2V3.5h2V.55zm7.45 3.91l-1.41-1.41-1.79 1.79 1.41 1.41 1.79-1.79zm-3.21 13.7l1.79 1.8 1.41-1.41-1.8-1.79-1.4 1.4zM20 10.5v2h3v-2h-3zm-8-5c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6zm-1 16.95h2V19.5h-2v2.95zm-7.45-3.91l1.41 1.41 1.79-1.8-1.41-1.41-1.79 1.8z"/>
                </svg>`;
            }
            else if (code === 2 || code === 3) {
                iconSVG = `<svg viewBox="0 0 24 24">
                    <path d="M6.76 4.84l-1.8-1.79-1.41 1.41 1.79 1.79 1.42-1.41zM1 10.5h3v2H1v-2zm9-9.95h2V3.5h-2V.55zm7.45 3.91l1.41-1.41 1.79 1.79-1.41 1.41-1.79-1.79zm-3.21 13.7l1.41 1.41 1.79-1.8-1.41-1.41-1.79 1.8zM20 10.5h3v2h-3v-2zm-2-4c-1.66 0-3 1.34-3 3 0 1.13.66 2.11 1.61 2.58-.05.27-.11.53-.11.82 0 2.76 2.24 5 5 5s5-2.24 5-5-2.24-5-5-5zm0 8c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3z"/>
                </svg>`;
            }
            else if (code >= 51 && code <= 67) {
                iconSVG = `<svg viewBox="0 0 24 24">
                    <path d="M9.01 18.46l-.72-1.28C5.77 17.19 4 16.59 4 14c0-3.31 2.69-6 6-6 1.01 0 1.97.25 2.83.69l1.43-2.48C13.17 5.76 11.63 5.25 10 5.25c-4.42 0-8 3.58-8 8s3.58 8 8 8c1.63 0 3.17-.51 4.43-1.46l-1.43-2.48c-.86.44-1.82.69-2.83.69-1.66 0-3-1.34-3-3 0-1.09.59-2.04 1.47-2.57z"/>
                </svg>`;
            }
            else if (code >= 71 && code <= 86) {
                iconSVG = `<svg viewBox="0 0 24 24">
                    <path d="M22 11h-4.17l3.24-3.24-1.41-1.42L15 11h-2V9l4.66-4.66-1.42-1.41L13 6.17V2h-2v4.17L7.76 2.93 6.34 4.34 11 9v2H9L4.34 6.34 2.93 7.76 6.17 11H2v2h4.17l-3.24 3.24 1.41 1.42L9 13h2v2l-4.66 4.66 1.42 1.41L11 17.83V22h2v-4.17l3.24 3.24 1.42-1.41L13 15v-2h2l4.66 4.66 1.41-1.42L17.83 13H22z"/>
                </svg>`;
            }
            else if (code >= 95) {
                iconSVG = `<svg viewBox="0 0 24 24">
                    <path d="M13 2L3 14h8l-1 8 10-12h-8l1-8z"/>
                </svg>`;
            }
            else {
                iconSVG = `<svg viewBox="0 0 24 24">
                    <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96z"/>
                </svg>`;
            }
            
            iconContainer.innerHTML = iconSVG;
        }
        
        function updateTimeAndDate() {
            const now = new Date();
            
            const hours = now.getHours();
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const ampm = hours >= 12 ? 'PM' : 'AM';
            const displayHours = hours % 12 || 12;
            const timeString = `${displayHours}:${minutes} ${ampm}`;
            
            const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            const month = months[now.getMonth()];
            const day = now.getDate();
            const dateString = `${month} ${day}`;
            
            document.querySelector('.time-date').textContent = `${timeString} | ${dateString}`;
        }
        
        getUserLocation();
        updateTheme();
        
        setInterval(updateTimeAndDate, 60000);
        setInterval(() => getUserLocation(), 600000);

        // Program Search Functionality
        const searchInput = document.getElementById('programSearch');
        const cards = document.querySelectorAll('.program-card');
        
        searchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            
            cards.forEach(card => {
                const programName = card.querySelector('.program-name').textContent.toLowerCase();
                const programAge = card.querySelector('.program-age').textContent.toLowerCase();
                const detailValues = card.querySelectorAll('.detail-value');
                let locationText = '';
                
                detailValues.forEach(detail => {
                    locationText += detail.textContent.toLowerCase() + ' ';
                });
                
                const matchesSearch = programName.includes(searchTerm) || 
                                     programAge.includes(searchTerm) || 
                                     locationText.includes(searchTerm);
                
                if (matchesSearch || searchTerm === '') {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
            
            updateScrollIndicator();
        });
        
        // Scroll indicator functionality
        const cardsContainer = document.getElementById('cardsContainer');
        const scrollDots = document.querySelectorAll('.scroll-dot');
        
        function updateScrollIndicator() {
            const scrollLeft = cardsContainer.scrollLeft;
            const cardWidth = cards[0].offsetWidth + 16;
            const currentIndex = Math.round(scrollLeft / cardWidth);
            
            scrollDots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentIndex);
            });
        }
        
        cardsContainer.addEventListener('scroll', updateScrollIndicator);
        
        scrollDots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                const cardWidth = cards[0].offsetWidth + 16;
                cardsContainer.scrollTo({
                    left: index * cardWidth,
                    behavior: 'smooth'
                });
            });
        });

        // Bottom Navigation
        const navItems = document.querySelectorAll('.nav-item');
        
        navItems.forEach(item => {
            item.addEventListener('click', function(e) {
                navItems.forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>
