<script>
    // ============================================
    // PROGRAM DATA (from your calendar system)
    // ============================================
    
    const PROGRAMS = [
        {
            id: 'xtreme-team',
            name: 'Xtreme Team',
            ageMin: 9,
            ageMax: 13,
            category: 'youth',
            schedule: [
                { day: 4, startTime: '6:00 PM', endTime: '7:30 PM' }
            ],
            startDate: new Date(2025, 8, 4),
            endDate: new Date(2025, 9, 24)
        },
        {
            id: 'intermediate-tue',
            name: 'Intermediate â€” Tuesday Only',
            ageMin: 9,
            ageMax: 13,
            category: 'intermediate',
            schedule: [
                { day: 2, startTime: '6:00 PM', endTime: '7:30 PM' }
            ],
            startDate: new Date(2025, 8, 16),
            endDate: new Date(2025, 9, 28)
        },
        {
            id: 'intermediate-mw',
            name: 'Intermediate M&W',
            ageMin: 9,
            ageMax: 13,
            category: 'intermediate',
            schedule: [
                { day: 1, startTime: '6:00 PM', endTime: '7:30 PM' },
                { day: 3, startTime: '6:00 PM', endTime: '7:30 PM' }
            ],
            startDate: new Date(2025, 8, 15),
            endDate: new Date(2025, 9, 29)
        },
        {
            id: 'hs-sprint-dev',
            name: 'Sprint Development',
            ageMin: 14,
            ageMax: 18,
            category: 'high-school',
            schedule: [
                { day: 2, startTime: '6:00 PM', endTime: '7:30 PM' },
                { day: 5, startTime: '5:00 PM', endTime: '6:30 PM' }
            ],
            startDate: new Date(2025, 8, 8),
            endDate: new Date(2025, 9, 31)
        },
        {
            id: 'hs-sprint-select',
            name: 'Sprint Select',
            ageMin: 14,
            ageMax: 18,
            category: 'high-school',
            schedule: [
                { day: 1, startTime: '3:05 PM', endTime: '4:30 PM' },
                { day: 3, startTime: '3:05 PM', endTime: '4:30 PM' },
                { day: 5, startTime: '3:05 PM', endTime: '4:30 PM' }
            ],
            startDate: new Date(2025, 8, 8),
            endDate: new Date(2025, 11, 19)
        },
        {
            id: 'hs-jumps-select',
            name: 'Jumps Select',
            ageMin: 14,
            ageMax: 18,
            category: 'high-school',
            schedule: [
                { day: 2, startTime: '4:30 PM', endTime: '6:00 PM' },
                { day: 4, startTime: '4:30 PM', endTime: '6:00 PM' },
                { day: 0, startTime: '10:00 AM', endTime: '12:00 PM' }
            ],
            startDate: new Date(2025, 9, 15),
            endDate: new Date(2025, 11, 20)
        },
        {
            id: 'hs-cross-country',
            name: 'Cross Country',
            ageMin: 14,
            ageMax: 18,
            category: 'high-school',
            schedule: [
                { day: 2, startTime: '4:00 PM', endTime: '5:30 PM' },
                { day: 4, startTime: '4:00 PM', endTime: '5:30 PM' },
                { day: 0, startTime: '9:00 AM', endTime: '10:30 AM' }
            ],
            startDate: new Date(2025, 7, 26),
            endDate: new Date(2025, 10, 21)
        }
    ];

    // ============================================
    // UTILITIES
    // ============================================

    const WEEKDAYS = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
    const MONTHS = ['JANUARY', 'FEBRUARY', 'MARCH', 'APRIL', 'MAY', 'JUNE', 
                    'JULY', 'AUGUST', 'SEPTEMBER', 'OCTOBER', 'NOVEMBER', 'DECEMBER'];

    function formatDayNumber(date) {
        return date.getDate().toString().padStart(2, '0');
    }

    function isToday(date) {
        const today = new Date();
        return date.toDateString() === today.toDateString();
    }

    function isDateInRange(date, start, end) {
        const d = new Date(date.getFullYear(), date.getMonth(), date.getDate());
        const s = new Date(start.getFullYear(), start.getMonth(), start.getDate());
        const e = new Date(end.getFullYear(), end.getMonth(), end.getDate());
        return d >= s && d <= e;
    }

    function getProgramsForDate(date) {
        const dayOfWeek = date.getDay();
        const programs = [];

        PROGRAMS.forEach(program => {
            if (!isDateInRange(date, program.startDate, program.endDate)) {
                return;
            }

            program.schedule.forEach(slot => {
                if (slot.day === dayOfWeek) {
                    programs.push({
                        program: program,
                        startTime: slot.startTime,
                        endTime: slot.endTime
                    });
                }
            });
        });

        // Sort by start time
        programs.sort((a, b) => {
            const timeA = a.startTime.replace(/[^0-9:]/g, '');
            const timeB = b.startTime.replace(/[^0-9:]/g, '');
            return timeA.localeCompare(timeB);
        });

        return programs;
    }

    // ============================================
    // UI RENDERING
    // ============================================

    let currentDate = new Date();

    function renderDay() {
        const programs = getProgramsForDate(currentDate);

        // Update date display
        document.getElementById('dayNumber').textContent = formatDayNumber(currentDate);
        document.getElementById('monthName').textContent = MONTHS[currentDate.getMonth()];
        document.getElementById('yearDisplay').textContent = currentDate.getFullYear();
        document.getElementById('weekday').textContent = WEEKDAYS[currentDate.getDay()];
        document.getElementById('sectionTitle').textContent = 
            isToday(currentDate) ? "TODAY'S PROGRAMS" : "PROGRAMS";

        // Render programs
        const container = document.getElementById('programsContainer');
        
        if (programs.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <div class="empty-icon">ðŸ“…</div>
                    <div>No programs scheduled for this day</div>
                </div>
            `;
            document.getElementById('addCalendarBtn').style.display = 'none';
        } else {
            container.innerHTML = programs.map(p => `
                <div class="program-card ${p.program.category}">
                    <div class="program-info">
                        <div class="program-name">${p.program.name}</div>
                        <div class="program-time">${p.startTime} - ${p.endTime}</div>
                    </div>
                    <div class="program-arrow">
                        <svg viewBox="0 0 24 24">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </div>
                </div>
            `).join('');
            document.getElementById('addCalendarBtn').style.display = 'block';
        }
    }

    function changeDay(offset) {
        currentDate = new Date(currentDate);
        currentDate.setDate(currentDate.getDate() + offset);
        renderDay();
    }

    function goToToday() {
        currentDate = new Date();
        renderDay();
    }

    // ============================================
    // EVENT LISTENERS
    // ============================================

    document.getElementById('prevBtn').addEventListener('click', () => changeDay(-1));
    document.getElementById('nextBtn').addEventListener('click', () => changeDay(1));
    document.getElementById('todayBtn').addEventListener('click', goToToday);
    document.getElementById('backBtn').addEventListener('click', () => {
        alert('Back to calendar clicked');
    });
    document.getElementById('addCalendarBtn').addEventListener('click', () => {
        const programs = getProgramsForDate(currentDate);
        alert(`Adding ${programs.length} program(s) to calendar`);
    });

    // Initial render
    renderDay();
</script>
