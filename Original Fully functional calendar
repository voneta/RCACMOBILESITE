<body>
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h3>Training Calendar</h3>
            
            <!-- Schedule Preview Block -->
            <div class="schedule-preview">
                <img src="SCHEDULE_THUMBNAIL.jpg" alt="RCAC Schedule Preview" />
                <a class="download-btn" href="RCAC_SCHEDULE.pdf" target="_blank" download>
                    Download Full Schedule (PDF)
                </a>
                <div class="schedule-note">
                    Includes dates, times, ages, and locations for all RCAC programs.
                </div>
            </div>
            
            <h3>Training Categories</h3>
            
            <div class="category-section">
                <div class="category-header" onclick="toggleCategory('youth')">
                    <div class="category-name">
                        <div class="color-indicator" style="background: #D4A638;"></div>
                        <span>Youth Athletics</span>
                    </div>
                    <span class="expand-icon" id="youth-icon">‚ñº</span>
                </div>
                <div class="program-list" id="youth-programs">
                    <div class="program-item">
                        <input type="checkbox" id="xtreme" checked onchange="filterEvents()">
                        <div class="program-color-dot" style="background: #BB8B2A;"></div>
                        <label for="xtreme">Xtreme Team</label>
                    </div>
                    <div class="program-item">
                        <input type="checkbox" id="int-tue" checked onchange="filterEvents()">
                        <div class="program-color-dot" style="background: #D4A638;"></div>
                        <label for="int-tue">Intermediate (Tuesday Only)</label>
                    </div>
                    <div class="program-item">
                        <input type="checkbox" id="int-mw" checked onchange="filterEvents()">
                        <div class="program-color-dot" style="background: #E4C573;"></div>
                        <label for="int-mw">Intermediate (Monday & Wednesday)</label>
                    </div>
                </div>
            </div>
            
            <div class="category-section">
                <div class="category-header" onclick="toggleCategory('highschool')">
                    <div class="category-name">
                        <div class="color-indicator" style="background: #1C2A3A;"></div>
                        <span>High School</span>
                    </div>
                    <span class="expand-icon" id="highschool-icon">‚ñº</span>
                </div>
                <div class="program-list" id="highschool-programs">
                    <div class="program-item">
                        <input type="checkbox" id="sprint-dev" checked onchange="filterEvents()">
                        <div class="program-color-dot" style="background: #1C2A3A;"></div>
                        <label for="sprint-dev">Sprint Development</label>
                    </div>
                    <div class="program-item">
                        <input type="checkbox" id="sprint-sel" checked onchange="filterEvents()">
                        <div class="program-color-dot" style="background: #2B3D52;"></div>
                        <label for="sprint-sel">Sprint Select</label>
                    </div>
                    <div class="program-item">
                        <input type="checkbox" id="jumps" checked onchange="filterEvents()">
                        <div class="program-color-dot" style="background: #3C4E63;"></div>
                        <label for="jumps">Jumps Select</label>
                    </div>
                    <div class="program-item">
                        <input type="checkbox" id="xc" checked onchange="filterEvents()">
                        <div class="program-color-dot" style="background: #50637A;"></div>
                        <label for="xc">Cross Country</label>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <img class="banner" src="Calendar Banner.jpeg" alt="RCAC Banner" />
            </div>
            
            <div class="controls-bar">
                <div class="control-group">
                    <label class="control-label">Filter by Category</label>
                    <select id="categoryFilter" onchange="applyCategoryFilter()">
                        <option value="all">Show All Programs</option>
                        <option value="youth">Youth Athletics Only</option>
                        <option value="highschool">High School Only</option>
                    </select>
                </div>
                
                <div class="control-group">
                    <label class="control-label">Sort Sessions By</label>
                    <select id="sortBy">
                        <option value="time">Time</option>
                        <option value="name">Program Name</option>
                        <option value="category">Category</option>
                    </select>
                </div>
                
                <div class="control-group">
                    <label class="control-label">Search Programs</label>
                    <div class="search-wrapper">
                        <span class="search-icon">üîç</span>
                        <input type="text" id="searchInput" placeholder="e.g., Sprint, Xtreme, Jumps..." onkeyup="searchPrograms()">
                    </div>
                </div>
                
                <button class="apply-btn" onclick="applyFilters()">Apply</button>
            </div>
            
            <div class="calendar-section">
                <div class="month-nav">
                    <div class="nav-buttons">
                        <button onclick="changeMonth(-1)">‚Üê Previous</button>
                    </div>
                    <h2 class="month-title" id="currentMonth">January 2025</h2>
                    <div class="nav-buttons">
                        <button onclick="goToToday()">Today</button>
                        <button onclick="changeMonth(1)">Next ‚Üí</button>
                    </div>
                </div>
                
                <div class="calendar-grid" id="calendar"></div>
            </div>
        </div>
    </div>

    <script>
        let currentMonth = 0;
        let currentYear = 2025;
        const today = new Date();

        const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
        const dayNames = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];

        const programMap = {
            'xtreme': 'xtreme-team',
            'int-tue': 'intermediate-tue',
            'int-mw': 'intermediate-mw',
            'sprint-dev': 'sprint-dev',
            'sprint-sel': 'sprint-select',
            'jumps': 'jumps-select',
            'xc': 'cross-country'
        };

        function toggleCategory(category) {
            const programList = document.getElementById(`${category}-programs`);
            const icon = document.getElementById(`${category}-icon`);
            
            programList.classList.toggle('show');
            icon.classList.toggle('expanded');
        }

        function generateCalendar(month, year) {
            const calendar = document.getElementById('calendar');
            calendar.innerHTML = '';
            
            dayNames.forEach(day => {
                const header = document.createElement('div');
                header.className = 'day-header';
                header.textContent = day;
                calendar.appendChild(header);
            });
            
            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const daysInPrevMonth = new Date(year, month, 0).getDate();
            
            for (let i = firstDay - 1; i >= 0; i--) {
                const dayDiv = createDayCell(daysInPrevMonth - i, month - 1, year, true);
                calendar.appendChild(dayDiv);
            }
            
            for (let day = 1; day <= daysInMonth; day++) {
                const dayDiv = createDayCell(day, month, year, false);
                calendar.appendChild(dayDiv);
            }
            
            const totalCells = calendar.children.length - 7;
            const remainingCells = (Math.ceil(totalCells / 7) * 7) - totalCells;
            for (let day = 1; day <= remainingCells; day++) {
                const dayDiv = createDayCell(day, month + 1, year, true);
                calendar.appendChild(dayDiv);
            }
            
            document.getElementById('currentMonth').textContent = `${monthNames[month]} ${year}`;
            filterEvents();
        }

        function createDayCell(day, month, year, isOtherMonth) {
            const dayDiv = document.createElement('div');
            dayDiv.className = 'calendar-day';
            if (isOtherMonth) dayDiv.classList.add('other-month');
            
            const cellDate = new Date(year, month, day);
            if (cellDate.toDateString() === today.toDateString()) {
                dayDiv.classList.add('today');
            }
            
            dayDiv.innerHTML = `<div class="day-number">${day}</div>`;
            
            if (!isOtherMonth) {
                const dayOfWeek = cellDate.getDay();
                const events = getEventsForDay(dayOfWeek);
                
                events.forEach(event => {
                    dayDiv.innerHTML += event;
                });
            }
            
            return dayDiv;
        }

        function getEventsForDay(dayOfWeek) {
            const events = [];
            
            if (dayOfWeek === 0) {
                events.push('<div class="event cross-country" data-program="xc">Cross Country<div class="event-time">Times Vary</div></div>');
            }
            
            if (dayOfWeek === 1) {
                events.push('<div class="event intermediate-mw" data-program="int-mw">Intermediate M&W<div class="event-time">6:15 PM</div></div>');
                events.push('<div class="event sprint-select" data-program="sprint-sel">Sprint Select<div class="event-time">5:30 PM</div></div>');
            }
            
            if (dayOfWeek === 2) {
                events.push('<div class="event intermediate-tue" data-program="int-tue">Intermediate Tue<div class="event-time">6:00 PM</div></div>');
                events.push('<div class="event sprint-dev" data-program="sprint-dev">Sprint Dev<div class="event-time">6:00 PM</div></div>');
                events.push('<div class="event jumps-select" data-program="jumps">Jumps Select<div class="event-time">Times Vary</div></div>');
                events.push('<div class="event cross-country" data-program="xc">Cross Country<div class="event-time">Times Vary</div></div>');
            }
            
            if (dayOfWeek === 3) {
                events.push('<div class="event intermediate-mw" data-program="int-mw">Intermediate M&W<div class="event-time">6:15 PM</div></div>');
                events.push('<div class="event sprint-select" data-program="sprint-sel">Sprint Select<div class="event-time">5:30 PM</div></div>');
            }
            
            if (dayOfWeek === 4) {
                events.push('<div class="event xtreme-team" data-program="xtreme">Xtreme Team<div class="event-time">6:00 PM</div></div>');
                events.push('<div class="event jumps-select" data-program="jumps">Jumps Select<div class="event-time">Times Vary</div></div>');
                events.push('<div class="event cross-country" data-program="xc">Cross Country<div class="event-time">Times Vary</div></div>');
            }
            
            if (dayOfWeek === 5) {
                events.push('<div class="event sprint-dev" data-program="sprint-dev">Sprint Dev<div class="event-time">5:30 PM</div></div>');
                events.push('<div class="event sprint-select" data-program="sprint-sel">Sprint Select<div class="event-time">5:30 PM</div></div>');
            }
            
            if (dayOfWeek === 6) {
                events.push('<div class="event jumps-select" data-program="jumps">Jumps Select<div class="event-time">Times Vary</div></div>');
            }
            
            return events;
        }

        function filterEvents() {
            const checkboxes = document.querySelectorAll('.program-item input[type="checkbox"]');
            const activePrograms = new Set();
            
            checkboxes.forEach(cb => {
                if (cb.checked) {
                    activePrograms.add(cb.id);
                }
            });
            
            const allEvents = document.querySelectorAll('.event');
            allEvents.forEach(event => {
                const program = event.getAttribute('data-program');
                if (activePrograms.has(program)) {
                    event.style.display = 'block';
                } else {
                    event.style.display = 'none';
                }
            });
        }

        function applyCategoryFilter() {
            const filter = document.getElementById('categoryFilter').value;
            const youthCheckboxes = ['xtreme', 'int-tue', 'int-mw'];
            const hsCheckboxes = ['sprint-dev', 'sprint-sel', 'jumps', 'xc'];
            
            if (filter === 'all') {
                [...youthCheckboxes, ...hsCheckboxes].forEach(id => {
                    document.getElementById(id).checked = true;
                });
            } else if (filter === 'youth') {
                youthCheckboxes.forEach(id => document.getElementById(id).checked = true);
                hsCheckboxes.forEach(id => document.getElementById(id).checked = false);
            } else if (filter === 'highschool') {
                hsCheckboxes.forEach(id => document.getElementById(id).checked = true);
                youthCheckboxes.forEach(id => document.getElementById(id).checked = false);
            }
            
            filterEvents();
        }

        function searchPrograms() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const programItems = document.querySelectorAll('.program-item');
            
            programItems.forEach(item => {
                const label = item.querySelector('label').textContent.toLowerCase();
                if (label.includes(searchTerm) || searchTerm === '') {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        function applyFilters() {
            filterEvents();
        }

        function changeMonth(direction) {
            currentMonth += direction;
            
            if (currentMonth > 11) {
                currentMonth = 0;
                currentYear++;
            } else if (currentMonth < 0) {
                currentMonth = 11;
                currentYear--;
            }
            
            generateCalendar(currentMonth, currentYear);
        }

        function goToToday() {
            currentMonth = today.getMonth();
            currentYear = today.getFullYear();
            generateCalendar(currentMonth, currentYear);
        }

        generateCalendar(currentMonth, currentYear);
        toggleCategory('youth');
        toggleCategory('highschool');
    </script>
</body>
</html>
